rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function isAdmin() {
      return request.auth != null && get(/databases/$(db)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /{path=**}/documents {
      allow read, write: if isAdmin();
    }
  }
}
